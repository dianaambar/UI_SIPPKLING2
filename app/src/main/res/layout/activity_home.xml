<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fitsSystemWindows="true"
>
    <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
    >
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

            <ImageView
                    android:contentDescription="@string/app_name"
                    android:id="@+id/background"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:fitsSystemWindows="true"
                    android:background="@drawable/background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
            />
            <LinearLayout
                    android:id="@+id/infoCuaca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/cardHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
            >
                <ImageView
                        android:contentDescription="@string/app_name"
                        android:id="@+id/imgCuaca"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/cuaca"
                />
                <TextView
                        android:id="@+id/txtSuhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/suhucuaca"
                        app:fontFamily="@font/gotham_semibold"
                        android:textColor="#1c8572"
                        android:textSize="15sp"
                        android:layout_marginStart="7dp"
                />
                <ImageView
                        android:contentDescription="@string/app_name"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:src="@drawable/derajat"
                        android:layout_marginTop="6dp"
                />
            </LinearLayout>
            <android.support.v7.widget.CardView
                    android:id="@+id/cardHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="7dp"
                    android:layout_marginTop="90dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/infoCuaca"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
            >
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                >
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_editor_absoluteX="0dp"
                            app:layout_editor_absoluteY="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                    >
                        <LinearLayout
                                android:baselineAligned="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                        >
                            <RelativeLayout
                                    android:layout_weight="1"
                                    android:id="@+id/infoKader"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="start"
                                    android:layout_marginStart="10dp"
                            >
                                <TextView
                                        android:id="@+id/txtNamaKaderHome"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/contohnamaprofile"
                                        app:fontFamily="@font/gotham_semibold"
                                />
                                <TextView
                                        android:layout_below="@id/txtNamaKaderHome"
                                        android:id="@+id/txtNamaLokasiKaderHome"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/contohlokasikader"
                                        app:fontFamily="@font/gotham_light"
                                        android:textSize="@dimen/small"
                                        android:textColor="#3fb286"
                                />
                            </RelativeLayout>
                            <RelativeLayout
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:gravity="end"

                            >
                                    <TextView
                                            android:id="@+id/txtJumlahBerapaKaliHome"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/jumlahpendataan"
                                            android:layout_centerVertical="true"
                                            app:fontFamily="@font/gotham_semibold"
                                    />
                                    <TextView
                                            android:id="@+id/xpend"
                                            android:layout_toEndOf="@id/txtJumlahBerapaKaliHome"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="@string/xpendataan"
                                            app:fontFamily="@font/gotham_light"
                                            android:textSize="@dimen/medium"
                                            android:gravity="center"
                                            android:layout_centerVertical="true"
                                    />
                                    <ImageView
                                            android:contentDescription="@string/app_name"
                                            android:layout_toEndOf="@id/xpend"
                                            android:layout_width="15dp"
                                            android:layout_height="15dp"
                                            android:src="@drawable/panah"
                                            android:layout_marginStart="5dp"
                                            android:layout_gravity="center"
                                            android:layout_centerVertical="true"
                                    />

                                <TextView
                                        android:layout_below="@id/xpend"
                                        android:layout_toEndOf="@id/txtJumlahBerapaKaliHome"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/profilkader"
                                        app:fontFamily="@font/gotham_light"
                                        android:textSize="@dimen/small"
                                        android:textColor="#3fb286"
                                        android:layout_marginTop="5dp"
                                />

                            </RelativeLayout>

                        </LinearLayout>


                        <ImageView
                                android:contentDescription="@string/app_name"
                                android:id="@+id/garis"
                                android:layout_width="match_parent"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="@id/infoKader"
                                android:src="@drawable/garis"
                        />
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:baselineAligned="false"
                                android:padding="10dp"
                        >
                            <RelativeLayout
                                    android:id="@+id/bagianNotif"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                            >
                                <ImageView
                                        android:contentDescription="@string/app_name"
                                        android:id="@+id/imgNotif"
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:src="@drawable/notifications"
                                        android:layout_centerInParent="true"
                                />

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/imgNotif"
                                        android:text="@string/pesan"
                                        app:fontFamily="@font/gotham_regular"
                                        android:textSize="@dimen/medium"
                                        android:layout_centerInParent="true"
                                />

                            </RelativeLayout>
                            <RelativeLayout
                                    android:id="@+id/bagianRiwayat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                            >
                                <ImageView
                                        android:contentDescription="@string/app_name"
                                        android:id="@+id/imgRiwayatPendataan"
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:src="@drawable/riwayat_pendataan"
                                        android:layout_centerHorizontal="true"
                                />
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/riwayatpendataan"
                                        android:textSize="@dimen/medium"
                                        app:fontFamily="@font/gotham_regular"
                                        android:layout_below="@id/imgRiwayatPendataan"
                                        android:layout_centerHorizontal="true"

                                />

                            </RelativeLayout>
                            <RelativeLayout
                                    android:id="@+id/bagianReward"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                            >
                                <ImageView
                                        android:contentDescription="@string/app_name"
                                        android:id="@+id/imgReward"
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:src="@drawable/reward1"
                                        android:layout_centerInParent="true"
                                />
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/reward"
                                        android:layout_below="@id/imgReward"
                                        app:fontFamily="@font/gotham_regular"
                                        android:textSize="@dimen/medium"
                                        android:layout_centerInParent="true"
                                />


                            </RelativeLayout>


                        </LinearLayout>
                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                    android:id="@+id/bagianInfoKecil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cardHeader"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
            >
                <ImageView
                        android:contentDescription="@string/app_name"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/logo_depok"
                />
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                >
                    <TextView
                            android:id="@+id/txtSippKling"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sippkling"
                            app:fontFamily="@font/gotham_semibold"
                            android:textSize="15sp"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtSippKling"
                            android:text="@string/singkatan"
                            android:textSize="@dimen/small"
                            app:fontFamily="@font/gotham_light"
                    />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/baris1"
                    app:layout_constraintTop_toBottomOf="@id/bagianInfoKecil"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
            >
                <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:id="@+id/buttonRumahSehat"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="13dp"
                        app:cardElevation="3dp"
                        app:contentPadding="5dp"
                        android:layout_margin="7dp"
                >
                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                    >
                        <ImageView
                                android:contentDescription="@string/app_name"
                                android:id="@+id/imgRumahSehat"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/rumahsehaticon"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/txtRumahSehat"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintVertical_chainStyle="packed"
                        />
                        <TextView
                                android:id="@+id/txtRumahSehat"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/imgRumahSehat"
                                android:text="@string/rumahsehat"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:fontFamily="@font/gotham_light"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                android:textSize="@dimen/supersmall"
                                android:gravity="center"
                        />

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:id="@+id/buttonKesling"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="13dp"
                        app:cardElevation="3dp"
                        app:contentPadding="2dp"
                        android:layout_margin="7dp"
                >
                    <android.support.constraint.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                    >
                        <ImageView
                                android:contentDescription="@string/app_name"
                                android:id="@+id/imgPelayananLingkungan"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/kesehatanlingkungan"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/txtKesLing"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintVertical_chainStyle="packed"
                        />
                        <TextView
                                android:id="@+id/txtKesLing"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/imgPelayananLingkungan"
                                android:text="@string/kesling"
                                app:fontFamily="@font/gotham_light"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                android:textSize="@dimen/supersmall"
                                android:gravity="center"
                        />

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:id="@+id/buttonRestaurant"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="13dp"
                        app:cardElevation="3dp"
                        app:contentPadding="5dp"
                        android:layout_margin="7dp"
                >
                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                    >
                        <ImageView
                                android:contentDescription="@string/app_name"
                                android:id="@+id/imgRumahMakan"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/rumahmakanrestaurant"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/txtRumahMakan"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintVertical_chainStyle="packed"/>
                        <TextView
                                android:id="@+id/txtRumahMakan"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/imgRumahMakan"
                                android:text="@string/rumahmakan"
                                android:gravity="center"
                                app:fontFamily="@font/gotham_light"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                android:textSize="@dimen/supersmall"
                        />

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>
            <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:layout_constraintTop_toBottomOf="@id/baris1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="10dp"
                    android:id="@+id/linearLayout">
                <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:id="@+id/buttonSekolah"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="13dp"
                        app:cardElevation="3dp"
                        app:contentPadding="3dp"
                        android:layout_margin="7dp"
                >
                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                    >
                        <ImageView
                                android:contentDescription="@string/app_name"
                                android:id="@+id/imgSekolah"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/sekolah"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/txtSekolah"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintVertical_chainStyle="packed"
                        />
                        <TextView
                                android:id="@+id/txtSekolah"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/imgSekolah"
                                android:text="@string/sekolah"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:fontFamily="@font/gotham_light"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                android:textSize="@dimen/supersmall"
                                android:gravity="center"
                        />

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:id="@+id/buttonPasar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="13dp"
                        app:cardElevation="3dp"
                        app:contentPadding="3dp"
                        android:layout_margin="7dp"
                >
                    <android.support.constraint.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                    >
                        <ImageView
                                android:contentDescription="@string/app_name"
                                android:id="@+id/imgPasar"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/pasar"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/txtPasar"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintVertical_chainStyle="packed"
                        />
                        <TextView
                                android:id="@+id/txtPasar"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/imgPasar"
                                android:text="@string/pasar"
                                app:fontFamily="@font/gotham_light"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                android:textSize="@dimen/supersmall"
                                android:gravity="center"
                        />

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:id="@+id/buttonLainnya"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="13dp"
                        app:cardElevation="3dp"
                        app:contentPadding="5dp"
                        android:layout_margin="5dp"
                >
                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                    >
                        <ImageView
                                android:contentDescription="@string/app_name"
                                android:id="@+id/imgLainnya"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/lainnnya"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/txtLainnya"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintVertical_chainStyle="packed"/>
                        <TextView
                                android:id="@+id/txtLainnya"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/imgLainnya"
                                android:text="@string/lainnya"
                                android:gravity="center"
                                app:fontFamily="@font/gotham_light"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                android:textSize="@dimen/supersmall"
                        />

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>