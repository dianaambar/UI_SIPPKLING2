<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Empty">
    <ImageView
            android:id="@+id/gambarKosong"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/kosongringan"
    />
    <TextView
            android:id="@+id/kosong1"
            app:layout_constraintTop_toBottomOf="@+id/gambarKosong"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="BELUM ADA DISKUSI"
            android:fontFamily="@font/gotham_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            app:layout_constraintTop_toBottomOf="@+id/kosong1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Jadilah yang pertama berdiskusi(?)"
            android:layout_width="wrap_content"
            android:fontFamily="@font/gotham_light"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>