<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Test">

    <Button
            android:id="@+id/btnProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="profile"
    />
    <Button
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="home"
            app:layout_constraintTop_toBottomOf="@id/btnProfile"
    />

    <Button
            android:id="@+id/btnKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="kategori"
            app:layout_constraintTop_toBottomOf="@id/btnHome"
    />
    <Button
            android:id="@+id/btnDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="detail"
            app:layout_constraintTop_toBottomOf="@id/btnKategori"
    />

    <Button
            android:id="@+id/btnReward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Reward"
            app:layout_constraintTop_toBottomOf="@id/btnDetail"
    />
    <Button
            android:id="@+id/btnPesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Pesan"
            app:layout_constraintTop_toBottomOf="@id/btnReward"
    />
    <Button
            android:id="@+id/btnRewardKader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Reward Kader"
            app:layout_constraintTop_toBottomOf="@id/btnPesan"
    />

</android.support.constraint.ConstraintLayout>